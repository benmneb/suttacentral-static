{
  "name": "suttacentral-static",
  "description": "A fast and minimal alternative frontend for SuttaCentral.net",
  "author": "benmneb",
  "license": "CC0",
  "packageManager": "pnpm@10.24.0",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "NODE_ENV=prod NODE_OPTIONS=\"--max-old-space-size=16384\" pnpm exec eleventy",
    "build:debug": "NODE_OPTIONS=\"--max-old-space-size=16384\" pnpm exec eleventy",
    "build:nav": "NODE_ENV=prod NODE_OPTIONS=\"--max-old-space-size=8192\" ONLY_NAV=1 pnpm exec eleventy",
    "build:nav:debug": "NODE_OPTIONS=\"--max-old-space-size=16384\" ONLY_NAV=1 pnpm exec eleventy",
    "build:texts": "NODE_ENV=prod NODE_OPTIONS=\"--max-old-space-size=8192\" ONLY_TEXTS=1 pnpm exec eleventy",
    "build:texts:debug": "NODE_OPTIONS=\"--max-old-space-size=16384\" ONLY_TEXTS=1 pnpm exec eleventy",
    "build:utils": "NODE_ENV=prod NODE_OPTIONS=\"--max-old-space-size=8192\" ONLY_UTILS=1 pnpm exec eleventy",
    "minify:css": "node tools/minifyAssets.js css",
    "minify:js": "node tools/minifyAssets.js js",
    "minify:assets": "node tools/minifyAssets.js",
    "build:search": "pnpm pagefind",
    "dev": "pnpm serve _site",
    "dev:fresh": "pnpm run predeploy && pnpm run dev",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "predeploy": "rm -rf _site && pnpm run build && pnpm run build:search",
    "deploy:dev": "vercel deploy --archive=tgz --cwd=_site",
    "deploy:prod": "vercel deploy --archive=tgz --cwd=_site --prod",
    "archive:dry": "node -r dotenv/config tools/archive.js dry",
    "archive:upload": "node -r dotenv/config tools/archive.js",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,liquid,json,md,css,yml}": "prettier --write"
  },
  "dependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-fetch": "^5.1.0",
    "pagefind": "^1.4.0"
  },
  "devDependencies": {
    "@shopify/prettier-plugin-liquid": "^1.10.0",
    "browserslist": "^4.28.0",
    "dotenv": "^17.2.3",
    "html-minifier-terser": "^7.2.0",
    "husky": "^9.1.7",
    "lightningcss": "^1.30.2",
    "lint-staged": "^16.2.7",
    "ora": "^8.2.0",
    "prettier": "^3.7.3",
    "serve": "^14.2.5",
    "terser": "^5.44.1"
  }
}
